        <!-- Modal For New User -->
        <div class="modal fade" id="loginForm" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="titleModal" style="font-family: moonsans; font-size: 30px;">Login
                        </h4>
                    </div>
                    <form>
                        <div class="modal-body">

                            <p style="font-family: moonsans; font-size: 30px;">Email:</p>
                            <input name="username" id="sign_name"></input>
                            <p style="font-family: moonsans; font-size: 30px;">Password:</p>
                            <input type="password" name="password" id="sign_pass"></input>
                            <div class="login-error"></div>
                            <br>
                            <button id="signin" class="btn btn-secondary"
                                style="font-family: moonsans; font-size: 30px;">Submit</button>
                        </div>
                    </form>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal For New User -->
        <div class="modal fade" id="newUserForm" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="titleModal" style="font-family: moonsans; font-size: 30px;">Sign Up
                        </h4>
                    </div>
                    <form>
                        <div class="modal-body">
                            <div class="signupfirstName">
                                <p style="font-family: moonsans; font-size: 30px;"> First Name:</p>
                                <input name="firstname" id="fname"></input>
                                <span class="error-message"></span>
                            </div>
                            <div class="signuplastName">
                                <p style="font-family: moonsans; font-size: 30px;"> Last Name:</p>
                                <input name="lastname" id="lname"></input>
                                <span class="error-message"></span>
                            </div>
                            <div class="signupuserName">
                                <p style="font-family: moonsans; font-size: 30px;">Username:</p>
                                <input name="username" id="uname"></input>
                                <span class="error-message"></span>
                            </div>
                            <div class="signupuserEmail">
                                <p style="font-family: moonsans; font-size: 30px;"> Email:</p>
                                <input name="email" id="email"></input>
                                <span class="error-message"></span>
                            </div>
                            <div class="signuppassword">
                                <p style="font-family: moonsans; font-size: 30px;"> Password:</p>
                                <input type="password" name="password" id="pass"></input>
                                <span class="error-message"></span>
                            </div>
                            <div class="signupuserPhoto">
                                <p style="font-family: moonsans; font-size: 30px;"> Picture:</p>
                                <input type="file" name="avatar" id="avatar"></input>
                                <span class="error-message"></span>
                            </div>
                            <button id="signup" class="btn btn-secondary"
                                style="font-family: moonsans; font-size: 30px;">Submit</button>
                        </div>
                    </form>
                        <button type="button" id="disclaimerButton" style="float:left;">Nicecity Service Disclaimer</button>
                        <div class="row">
                        <div class="col-lg-12" id="disclaimer"></div>
                        </div>
                    <div class="modal-footer">
                        <div class="row">
                            <div class="col-lg-12">
                        <button type="button" class="btn btn-default" data-dismiss="modal" style="float:right">Close</button>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

