    <button type="button" class="btn btn-secondary btn-lg" data-toggle="modal" data-target="#loginForm" id="login"
        style="float: right; margin:5px;
        font-family: moonsans; font-size: 30px;">Log
        in</button>
    <button type="button" class="btn btn-dark btn-lg" data-toggle="modal" data-target="#newUserForm" id="newUser"
        style="float: right; margin:5px; font-family: moonsans; font-size: 30px;">Create Account</button>
    <br>
    <img id="loginLogoImage" src="https://user-images.githubusercontent.com/50628151/65193057-a5296f00-da47-11e9-98c0-999c8c2f781a.png">


